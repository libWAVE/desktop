<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="WARN">

	<Appenders>

		<Console
			name="console"
			target="SYSTEM_OUT"
		>
			<PatternLayout pattern="[%-5level] %d{dd-MMM-yy HH:mm:ss.SSS} %logger{36}.%M() - %msg%n" />
		</Console>

		<RollingFile name="file">
			<FileName>${sys:user.home}/.palscash/logs/client.log</FileName>
			<FilePattern>${sys:user.home}/.palscash/logs/clientnode-%d{yyyy-MM-dd}.log.zip
			</FilePattern>
			<PatternLayout>
				<Pattern>%d{ddMMyy kk:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy />
			</Policies>
			<DefaultRolloverStrategy max="5" />
		</RollingFile>

	</Appenders>

	<Loggers>

		<Logger
			name="org.springframework"
			level="info"
			additivity="false"
		>
			<AppenderRef ref="console" />
			<AppenderRef ref="file" />
		</Logger>

		<Logger
			name="com.libwave"
			level="debug"
			additivity="false"
		>
			<AppenderRef ref="console" />
			<AppenderRef ref="file" />

		</Logger>

		<Root
			level="info"
			additivity="false"
		>
			<AppenderRef ref="console" />
			<AppenderRef ref="file" />

		</Root>
	</Loggers>

</Configuration>